# DuckDB Lakehouse Analytics - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Postgres Database Configuration
# ============================================

# Postgres host (IP or hostname)
DB_HOST=192.168.2.3

# Postgres port
DB_PORT=5433

# Postgres credentials (URL-encoded if special characters)
DB_USER=your_username
DB_PASSWORD=your_password

# ============================================
# Application Configuration
# ============================================

# How often to update the lakehouse (in hours)
UPDATE_INTERVAL_HOURS=1

# DuckDB database file path
DUCKDB_PATH=contentlake.ducklake

# API server configuration
HOST=0.0.0.0
PORT=8000
